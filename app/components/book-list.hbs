<div>
  {{#if this.books}}
    <ul>
      {{#each this.books.data as |book|}}
        <li>
          <strong>{{book.title}}</strong>
          <br> by <em>{{book.author}}</em>
        </li>
      {{/each}}
    </ul>
    <div>
      <button title="previous page" type="button" {{on 'click' (fn this.getPage this.books.links.prev)}} disabled={{not this.books.links.prev}}>≪</button>
      <button title="first page" type="button" {{on 'click' (fn this.getPage this.books.links.first)}} disabled={{not this.books.links.first}}>1</button>
      ...
      <button title="last page" type="button" {{on 'click' (fn this.getPage this.books.links.last)}} disabled={{not this.books.links.last}}>{{this.books.meta.pages}}</button>
      <button title="next page" type="button" {{on 'click' (fn this.getPage this.books.links.next)}} disabled={{not this.books.links.next}}>≫</button>
    </div>
  {{else}}
    <p>No books found</p>
  {{/if}}
</div>